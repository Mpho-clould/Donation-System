@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
   

    .container {
        background-image: url("https://images.unsplash.com/photo-1604176354204-9268737828e4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2080&q=80");
        background-repeat: no-repeat;
        background-size: 1150px 800px;
        padding: 20px; /* Add padding for spacing inside the container */
        border: 5px solid #ff7f00; /* Add a border for visualization */
    }
</style>
<h1>@ViewData["Title"]</h1>
<div class="container">
  
<div class="row">
    <div class="col-md-4">
       
        <section>
            <form id="account" method="post">
                <h2><b>Welcome Back!!</b>.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class=" btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                         <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                       <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>

                    </p>
                    <p>
                                 <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
   
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
