@model IEnumerable<POE_PART1.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<style>


    .container {
        background-color:white;
        background-repeat: no-repeat;
        background-size: 1150px 800px;
        padding: 20px; /* Add padding for spacing inside the container */
        border: 5px solid #ff7f00; /* Add a border for visualization */
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
